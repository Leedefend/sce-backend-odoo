{
  "name": "sc-backend-odoo (dev)",
  "dockerComposeFile": [
    "../docker-compose.yml",
    "../docker-compose.devcontainer.yml"
  ],
  "service": "sc-dev",
  "workspaceFolder": "/workspaces/sc-backend-odoo",
  "shutdownAction": "stopCompose",
  "runArgs": [
    "--env=WAYLAND_DISPLAY=",
    "--env=DISPLAY="
  ],
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-azuretools.vscode-docker",
        "ms-python.python",
        "redhat.vscode-yaml",
        "openai.chatgpt"
      ],
      "settings": {
        "dev.containers.mountWaylandSocket": false,
        "dev.containers.mountX11Socket": false
      }
    }
  }
}
