# Compose project name
ENV=test
ENV_FILE=.env.test
COMPOSE_PROJECT_NAME=sc-backend-odoo-test

# Database
DB_USER=odoo
DB_PASSWORD=odoo
DB_NAME=sc_test

# Odoo master password
ADMIN_PASSWD=admin

# JWT secret (test placeholder)
JWT_SECRET=test-secret-change-me

# Scene channels
SCENE_CHANNEL=beta
SCENE_USE_PINNED=0
SCENE_ROLLBACK=0

# Odoo: lock to a single DB
ODOO_DBFILTER=^sc_test$

# Runtime data (named volumes, explicit per env)
DB_DATA=sc_test_db_data
REDIS_DATA=sc_test_redis_data
ODOO_DATA=sc_test_odoo_data

# Host ports
NGINX_PORT=18082
ODOO_PORT=8071
