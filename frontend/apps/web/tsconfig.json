{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "strict": false,
    "noImplicitAny": false,
    "allowJs": true,
    "checkJs": false,
    // LEGACY_TYPE_DEBT: keep runtime build stable while strict checks run in tsconfig.strict.json
    "skipLibCheck": true,
    "jsx": "preserve",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable", "ESNext"],
    "types": ["vite/client", "node"],
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@sc/schema": ["../../packages/schema/src/index.ts"]
    }
  },
  "include": ["src", "vite.config.ts"]
}
