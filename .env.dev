# Compose project name
ENV=dev
ENV_FILE=.env.dev
COMPOSE_PROJECT_NAME=sc-backend-odoo-dev

# Database
DB_USER=odoo
DB_PASSWORD=odoo
DB_NAME=sc_demo

# Odoo master password
ADMIN_PASSWD=admin

# JWT secret (dev placeholder)
JWT_SECRET=dev-secret-change-me

# Odoo: lock to a single DB
ODOO_DBFILTER=^sc_demo$

# Runtime data (named volumes, explicit per env)
DB_DATA=sc_dev_db_data
REDIS_DATA=sc_dev_redis_data
ODOO_DATA=sc_dev_odoo_data

# Host ports
NGINX_PORT=18081
ODOO_PORT=8070
