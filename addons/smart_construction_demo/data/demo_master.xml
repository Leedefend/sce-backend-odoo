<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data noupdate="1">

        <!-- 供应商 -->
        <record id="sc_demo_supplier_a" model="res.partner">
            <field name="name">四川天府建材有限公司（供应商A）</field>
            <field name="company_type">company</field>
            <field name="supplier_rank">1</field>
        </record>

        <record id="sc_demo_supplier_b" model="res.partner">
            <field name="name">成都中原商贸有限公司（供应商B）</field>
            <field name="company_type">company</field>
            <field name="supplier_rank">1</field>
        </record>

        <!-- 成本科目 -->
        <record id="sc_demo_cost_root" model="project.cost.code">
            <field name="name">材料费</field>
            <field name="code">MAT</field>
            <field name="type">material</field>
        </record>
        <record id="sc_demo_cost_rebar" model="project.cost.code">
            <field name="name">钢筋采购</field>
            <field name="code">MAT-REBAR</field>
            <field name="type">material</field>
            <field name="parent_id" ref="sc_demo_cost_root"/>
        </record>
        <record id="sc_demo_cost_concrete" model="project.cost.code">
            <field name="name">混凝土采购</field>
            <field name="code">MAT-CONC</field>
            <field name="type">material</field>
            <field name="parent_id" ref="sc_demo_cost_root"/>
        </record>
        <record id="sc_demo_cost_subcontract" model="project.cost.code">
            <field name="name">主体分包</field>
            <field name="code">SUB-MAIN</field>
            <field name="type">subcontract</field>
        </record>

        <!-- 物料：钢筋 -->
        <record id="sc_demo_product_rebar_template" model="product.template">
            <field name="name">HRB400 钢筋 Φ16</field>
            <field name="default_code">MAT-REBAR-16</field>
            <field name="type">product</field>
            <field name="uom_id" ref="uom.product_uom_kgm"/>
            <field name="uom_po_id" ref="uom.product_uom_kgm"/>
            <field name="purchase_ok">True</field>
            <field name="sale_ok">False</field>
            <field name="list_price">0</field>
            <field name="standard_price">0</field>
        </record>

        <!-- 物料：C30 商品混凝土 -->
        <record id="sc_demo_product_concrete_template" model="product.template">
            <field name="name">C30 商品混凝土</field>
            <field name="default_code">MAT-CONC-C30</field>
            <field name="type">product</field>
            <field name="uom_id" ref="uom.product_uom_cubic_meter"/>
            <field name="uom_po_id" ref="uom.product_uom_cubic_meter"/>
            <field name="purchase_ok">True</field>
            <field name="sale_ok">False</field>
            <field name="list_price">0</field>
            <field name="standard_price">0</field>
        </record>

        <!-- 参数：采购生成成本台账 -->
        <record id="sc_demo_param_cost_from_purchase" model="ir.config_parameter">
            <field name="key">smart_construction_core.sc_cost_from_purchase</field>
            <field name="value">True</field>
        </record>

    </data>
</odoo>
