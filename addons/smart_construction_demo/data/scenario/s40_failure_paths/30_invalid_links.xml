<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data noupdate="1">

        <!-- S40-C: 关联缺失（有明细但无收款关联） -->
        <record id="sc_demo_settlement_040_link_bad" model="sc.settlement.order">
            <field name="name">S40-SETTLEMENT-LINK-BAD</field>
            <field name="project_id" ref="smart_construction_demo.sc_demo_project_001"/>
            <field name="partner_id" ref="smart_construction_demo.sc_demo_partner_owner_001"/>
            <field name="currency_id" ref="base.CNY"/>
            <field name="settlement_type">in</field>
        </record>

        <record id="sc_demo_settle_line_040_link_001" model="sc.settlement.order.line">
            <field name="name">S40-结算明细-缺失收款</field>
            <field name="settlement_id" ref="smart_construction_demo.sc_demo_settlement_040_link_bad"/>
            <field name="qty">1</field>
            <field name="price_unit">300000.00</field>
            <field name="amount">300000.00</field>
        </record>

        <!-- 未关联结算单的收款请求（用于验证链接缺失） -->
        <record id="sc_demo_payment_040_link_001" model="payment.request">
            <field name="type">receive</field>
            <field name="project_id" ref="smart_construction_demo.sc_demo_project_001"/>
            <field name="partner_id" ref="smart_construction_demo.sc_demo_partner_owner_001"/>
            <field name="amount">300000.00</field>
            <field name="date_request">2025-04-10</field>
        </record>

    </data>
</odoo>
