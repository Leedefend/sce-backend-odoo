<?xml version="1.0" encoding="UTF-8"?>
<odoo>
  <template id="portal_lifecycle_page" name="Portal Lifecycle Dashboard">
    <t t-call="web.layout">
      <t t-set="title">项目生命周期驾驶舱</t>
      <t t-call-assets="smart_construction_portal.assets_portal" t-js="true" t-css="true"/>
      <div id="sc-portal-root" class="sc-portal" data-page="lifecycle" t-att-data-project-id="project_id">
        <div class="sc-portal__header">
          <div class="sc-portal__title">项目生命周期驾驶舱</div>
          <div class="sc-portal__subtitle">Contract v1 + lifecycle/capability</div>
        </div>
        <div class="sc-portal__body">
          <div class="sc-portal__panel" data-portal="lifecycle"></div>
          <div class="sc-portal__panel" data-portal="detail"></div>
          <div class="sc-portal__panel" data-portal="capabilities"></div>
        </div>
      </div>
    </t>
  </template>

  <template id="portal_capability_matrix_page" name="Portal Capability Matrix">
    <t t-call="web.layout">
      <t t-set="title">能力矩阵</t>
      <t t-call-assets="smart_construction_portal.assets_portal" t-js="true" t-css="true"/>
      <div id="sc-portal-root" class="sc-portal" data-page="capability-matrix">
        <div class="sc-portal__header">
          <div class="sc-portal__title">能力矩阵</div>
          <div class="sc-portal__subtitle">可用入口与权限范围</div>
        </div>
        <div class="sc-portal__body sc-portal__body--matrix">
          <div class="sc-portal__panel" data-portal="capability-matrix"></div>
        </div>
      </div>
    </t>
  </template>

  <template id="portal_dashboard_page" name="Portal Dashboard">
    <t t-call="web.layout">
      <t t-set="title">我的工作台</t>
      <t t-call-assets="smart_construction_portal.assets_portal" t-js="true" t-css="true"/>
      <div id="sc-portal-root" class="sc-portal" data-page="dashboard">
        <div class="sc-portal__header">
          <div class="sc-portal__title">我的工作台</div>
          <div class="sc-portal__subtitle">基于角色的入口编排</div>
        </div>
        <div class="sc-portal__body sc-portal__body--dashboard">
          <div class="sc-portal__panel" data-portal="dashboard-action"></div>
          <div class="sc-portal__panel" data-portal="dashboard"></div>
        </div>
      </div>
    </t>
  </template>
</odoo>
