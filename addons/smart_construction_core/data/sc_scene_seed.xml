<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data noupdate="0">
        <!-- Capabilities -->
        <record id="sc_cap_project_work" model="sc.capability">
            <field name="sequence">10</field>
            <field name="key">project.work</field>
            <field name="name">项目工作</field>
            <field name="ui_label">项目工作</field>
            <field name="ui_hint">项目看板与概览入口</field>
            <field name="intent">ui.contract</field>
            <field name="default_payload" eval="{'action_xmlid': 'smart_construction_core.action_sc_project_kanban_lifecycle', 'menu_xmlid': 'smart_construction_core.menu_sc_project_project'}"/>
            <field name="required_group_ids" eval="[(6, 0, [ref('smart_construction_core.group_sc_cap_project_read')])]"/>
            <field name="tags">project</field>
            <field name="status">ga</field>
        </record>

        <record id="sc_cap_capability_matrix" model="sc.capability">
            <field name="sequence">20</field>
            <field name="key">capability.matrix</field>
            <field name="name">能力矩阵</field>
            <field name="ui_label">能力矩阵</field>
            <field name="ui_hint">查看角色可用能力</field>
            <field name="intent">ui.contract</field>
            <field name="default_payload" eval="{'action_xmlid': 'smart_construction_portal.action_sc_portal_capability_matrix', 'menu_xmlid': 'smart_construction_portal.menu_sc_portal_capability_matrix'}"/>
            <field name="tags">portal,capability</field>
            <field name="status">ga</field>
        </record>

        <record id="sc_cap_contract_work" model="sc.capability">
            <field name="sequence">30</field>
            <field name="key">contract.work</field>
            <field name="name">合同工作</field>
            <field name="ui_label">合同工作</field>
            <field name="ui_hint">合同台账与合同清单</field>
            <field name="intent">ui.contract</field>
            <field name="default_payload" eval="{'action_xmlid': 'smart_construction_core.action_construction_contract_my', 'menu_xmlid': 'smart_construction_core.menu_sc_contract_income'}"/>
            <field name="required_group_ids" eval="[(6, 0, [ref('smart_construction_core.group_sc_cap_contract_read')])]"/>
            <field name="tags">contract</field>
            <field name="status">ga</field>
        </record>

        <record id="sc_cap_cost_work" model="sc.capability">
            <field name="sequence">40</field>
            <field name="key">cost.work</field>
            <field name="name">成本工作</field>
            <field name="ui_label">成本工作</field>
            <field name="ui_hint">成本台账与预算入口</field>
            <field name="intent">ui.contract</field>
            <field name="default_payload" eval="{'action_xmlid': 'smart_construction_core.action_project_cost_ledger_my', 'menu_xmlid': 'smart_construction_core.menu_sc_project_cost_ledger'}"/>
            <field name="required_group_ids" eval="[(6, 0, [ref('smart_construction_core.group_sc_cap_cost_read')])]"/>
            <field name="tags">cost</field>
            <field name="status">ga</field>
        </record>

        <record id="sc_cap_finance_work" model="sc.capability">
            <field name="sequence">50</field>
            <field name="key">finance.work</field>
            <field name="name">财务工作</field>
            <field name="ui_label">财务工作</field>
            <field name="ui_hint">付款申请与财务台账</field>
            <field name="intent">ui.contract</field>
            <field name="default_payload" eval="{'action_xmlid': 'smart_construction_core.action_payment_request_my', 'menu_xmlid': 'smart_construction_core.menu_payment_request'}"/>
            <field name="required_group_ids" eval="[(6, 0, [ref('smart_construction_core.group_sc_cap_finance_read')])]"/>
            <field name="tags">finance</field>
            <field name="status">ga</field>
        </record>

        <!-- Scene -->
        <record id="sc_scene_default" model="sc.scene">
            <field name="sequence">10</field>
            <field name="code">default</field>
            <field name="name">默认场景</field>
            <field name="layout">grid</field>
            <field name="is_default">1</field>
            <field name="state">published</field>
            <field name="version">v0.1</field>
        </record>

        <record id="sc_scene_tile_project" model="sc.scene.tile">
            <field name="sequence">10</field>
            <field name="scene_id" ref="sc_scene_default"/>
            <field name="capability_id" ref="sc_cap_project_work"/>
            <field name="title">项目工作</field>
            <field name="subtitle">项目看板与概览入口</field>
            <field name="icon">P</field>
        </record>
        <record id="sc_scene_tile_capability" model="sc.scene.tile">
            <field name="sequence">20</field>
            <field name="scene_id" ref="sc_scene_default"/>
            <field name="capability_id" ref="sc_cap_capability_matrix"/>
            <field name="title">能力矩阵</field>
            <field name="subtitle">查看角色可用能力</field>
            <field name="icon">M</field>
        </record>
        <record id="sc_scene_tile_contract" model="sc.scene.tile">
            <field name="sequence">30</field>
            <field name="scene_id" ref="sc_scene_default"/>
            <field name="capability_id" ref="sc_cap_contract_work"/>
            <field name="title">合同工作</field>
            <field name="subtitle">合同台账与合同清单</field>
            <field name="icon">C</field>
        </record>
        <record id="sc_scene_tile_cost" model="sc.scene.tile">
            <field name="sequence">40</field>
            <field name="scene_id" ref="sc_scene_default"/>
            <field name="capability_id" ref="sc_cap_cost_work"/>
            <field name="title">成本工作</field>
            <field name="subtitle">成本台账与预算入口</field>
            <field name="icon">K</field>
        </record>
        <record id="sc_scene_tile_finance" model="sc.scene.tile">
            <field name="sequence">50</field>
            <field name="scene_id" ref="sc_scene_default"/>
            <field name="capability_id" ref="sc_cap_finance_work"/>
            <field name="title">财务工作</field>
            <field name="subtitle">付款申请与财务台账</field>
            <field name="icon">F</field>
        </record>
    </data>
</odoo>
