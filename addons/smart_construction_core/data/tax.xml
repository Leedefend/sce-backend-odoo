<odoo>
    <!-- 税组：增值税 -->
    <record id="sc_tax_group_vat" model="account.tax.group">
        <field name="name">增值税</field>
        <field name="sequence">10</field>
        <field name="company_id" ref="base.main_company"/>
    </record>

    <!-- 通用国家（若未配置国家则使用此记录） -->
    <record id="sc_country_generic" model="res.country">
        <field name="name">Generic Country</field>
        <field name="code">ZZ</field>
    </record>

    <!-- 销项税：收入合同默认 9% -->
    <record id="tax_sale_vat_9" model="account.tax">
        <field name="name">增值税 9%</field>
        <field name="amount_type">percent</field>
        <field name="amount">9</field>
        <field name="type_tax_use">sale</field>
        <field name="tax_group_id" ref="smart_construction_core.sc_tax_group_vat"/>
        <field name="company_id" ref="base.main_company"/>
        <field name="country_id" ref="smart_construction_core.sc_country_generic"/>
        <field name="active">True</field>
    </record>

    <!-- 进项税：支出合同可选 13/3/1 -->
    <record id="tax_purchase_vat_13" model="account.tax">
        <field name="name">增值税 13%</field>
        <field name="amount_type">percent</field>
        <field name="amount">13</field>
        <field name="type_tax_use">purchase</field>
        <field name="tax_group_id" ref="smart_construction_core.sc_tax_group_vat"/>
        <field name="company_id" ref="base.main_company"/>
        <field name="country_id" ref="smart_construction_core.sc_country_generic"/>
        <field name="active">True</field>
    </record>

    <record id="tax_purchase_vat_3" model="account.tax">
        <field name="name">增值税 3%</field>
        <field name="amount_type">percent</field>
        <field name="amount">3</field>
        <field name="type_tax_use">purchase</field>
        <field name="tax_group_id" ref="smart_construction_core.sc_tax_group_vat"/>
        <field name="company_id" ref="base.main_company"/>
        <field name="country_id" ref="smart_construction_core.sc_country_generic"/>
        <field name="active">True</field>
    </record>

    <record id="tax_purchase_vat_1" model="account.tax">
        <field name="name">增值税 1%</field>
        <field name="amount_type">percent</field>
        <field name="amount">1</field>
        <field name="type_tax_use">purchase</field>
        <field name="tax_group_id" ref="smart_construction_core.sc_tax_group_vat"/>
        <field name="company_id" ref="base.main_company"/>
        <field name="country_id" ref="smart_construction_core.sc_country_generic"/>
        <field name="active">True</field>
    </record>
</odoo>
