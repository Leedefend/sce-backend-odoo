<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data noupdate="0">

        <!-- =========================================================
             SC 超级管理员：项目/任务全放行
        ========================================================== -->
        <record id="rule_sc_super_admin_project_project_all" model="ir.rule">
            <field name="name">SC Super Admin - project.project ALL</field>
            <field name="model_id" ref="project.model_project_project"/>
            <field name="domain_force">[(1,'=',1)]</field>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="True"/>
            <field name="groups" eval="[(4, ref('smart_construction_core.group_sc_super_admin'))]"/>
        </record>

        <record id="rule_sc_super_admin_project_task_all" model="ir.rule">
            <field name="name">SC Super Admin - project.task ALL</field>
            <field name="model_id" ref="project.model_project_task"/>
            <field name="domain_force">[(1,'=',1)]</field>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="True"/>
            <field name="groups" eval="[(4, ref('smart_construction_core.group_sc_super_admin'))]"/>
        </record>

        <!-- =========================================================
             项目中心：项目 record rules
             - read/user: 仅限负责或关注的项目
             - manager: 放行全部
        ========================================================== -->
        <record id="rule_sc_project_read_project_project" model="ir.rule">
            <field name="name">SC Project Read - project.project member only</field>
            <field name="model_id" ref="project.model_project_project"/>
            <field name="domain_force">['|', ('user_id', '=', user.id), ('message_is_follower', '=', True)]</field>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="False"/>
            <field name="perm_unlink" eval="False"/>
            <field name="groups" eval="[(4, ref('smart_construction_core.group_sc_cap_project_read'))]"/>
        </record>

        <record id="rule_sc_project_user_project_project" model="ir.rule">
            <field name="name">SC Project User - project.project member only</field>
            <field name="model_id" ref="project.model_project_project"/>
            <field name="domain_force">['|', ('user_id', '=', user.id), ('message_is_follower', '=', True)]</field>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="False"/>
            <field name="groups" eval="[(4, ref('smart_construction_core.group_sc_cap_project_user'))]"/>
        </record>

        <record id="rule_sc_project_manager_project_project" model="ir.rule">
            <field name="name">SC Project Manager - project.project ALL</field>
            <field name="model_id" ref="project.model_project_project"/>
            <field name="domain_force">[(1,'=',1)]</field>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="True"/>
            <field name="groups" eval="[(4, ref('smart_construction_core.group_sc_cap_project_manager'))]"/>
        </record>

        <!-- =========================================================
             项目中心：任务 record rules
             - read/user: 仅限负责或关注的任务
             - manager: 放行全部
        ========================================================== -->
        <record id="rule_sc_project_read_project_task" model="ir.rule">
            <field name="name">SC Project Read - project.task visible by project/assignee/follower</field>
            <field name="model_id" ref="project.model_project_task"/>
            <field name="domain_force">
                ['|','|',
                    ('project_id.user_id','=',user.id),
                    ('project_id.message_is_follower','=',True),
                    '|',
                        ('user_ids','in',[user.id]),
                        ('message_is_follower','=',True)
                ]
            </field>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="False"/>
            <field name="perm_unlink" eval="False"/>
            <field name="groups" eval="[(4, ref('smart_construction_core.group_sc_cap_project_read'))]"/>
        </record>

        <record id="rule_sc_project_user_project_task" model="ir.rule">
            <field name="name">SC Project User - project.task visible by project/assignee/follower</field>
            <field name="model_id" ref="project.model_project_task"/>
            <field name="domain_force">
                ['|','|',
                    ('project_id.user_id','=',user.id),
                    ('project_id.message_is_follower','=',True),
                    '|',
                        ('user_ids','in',[user.id]),
                        ('message_is_follower','=',True)
                ]
            </field>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="False"/>
            <field name="groups" eval="[(4, ref('smart_construction_core.group_sc_cap_project_user'))]"/>
        </record>

        <record id="rule_sc_project_manager_project_task" model="ir.rule">
            <field name="name">SC Project Manager - project.task ALL</field>
            <field name="model_id" ref="project.model_project_task"/>
            <field name="domain_force">[(1,'=',1)]</field>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="True"/>
            <field name="groups" eval="[(4, ref('smart_construction_core.group_sc_cap_project_manager'))]"/>
        </record>

    </data>
</odoo>
