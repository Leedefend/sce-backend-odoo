<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <!-- 项目角色 -->
        <record id="group_sc_role_project_manager" model="res.groups">
            <field name="name">SC 角色 - 项目经理</field>
            <field name="category_id" ref="smart_construction_core.module_category_smart_construction"/>
            <field name="implied_ids" eval="[(6, 0, [ref('smart_construction_core.group_sc_cap_project_manager')])]"/>
        </record>

        <!-- 物资角色 -->
        <record id="group_sc_role_material_user" model="res.groups">
            <field name="name">SC 角色 - 物资员</field>
            <field name="category_id" ref="smart_construction_core.module_category_smart_construction"/>
            <field name="implied_ids" eval="[(6, 0, [
                ref('smart_construction_core.group_sc_cap_project_read'),
                ref('smart_construction_core.group_sc_cap_material_user')
            ])]"/>
        </record>

        <record id="group_sc_role_material_manager" model="res.groups">
