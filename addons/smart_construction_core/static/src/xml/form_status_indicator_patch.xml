<odoo>
    <t t-inherit="web.FormStatusIndicator" t-inherit-mode="extension">
        <xpath expr="//button[contains(@class, 'o_form_button_save')]" position="inside">
            <span class="sc-btn-label ms-1" t-esc="scSaveLabel"/>
        </xpath>
        <xpath expr="//button[contains(@class, 'o_form_button_cancel')]" position="attributes">
            <attribute name="t-att-class">{'d-none': scHideDiscard}</attribute>
        </xpath>
        <xpath expr="//button[contains(@class, 'o_form_button_cancel')]" position="inside">
            <span class="sc-btn-label ms-1" t-esc="scDiscardLabel"/>
        </xpath>
    </t>
</odoo>
