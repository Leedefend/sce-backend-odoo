<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_sc_project_kanban_lifecycle" model="ir.ui.view">
        <field name="name">project.project.kanban.lifecycle</field>
        <field name="model">project.project</field>
        <field name="arch" type="xml">
            <kanban default_group_by="lifecycle_state" class="o_kanban_small_column">
                <field name="name"/>
                <field name="lifecycle_state"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click o_kanban_record">
                            <div class="o_kanban_record_top">
                                <strong><field name="name"/></strong>
                            </div>
                            <div class="o_kanban_record_bottom">
                                <span class="badge"><field name="lifecycle_state"/></span>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>
</odoo>
