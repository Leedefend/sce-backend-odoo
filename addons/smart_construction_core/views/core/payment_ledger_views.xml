<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="view_payment_ledger_tree" model="ir.ui.view">
            <field name="name">payment.ledger.tree</field>
            <field name="model">payment.ledger</field>
            <field name="arch" type="xml">
                <tree string="付款记录">
                    <field name="payment_request_id"/>
                    <field name="project_id"/>
                    <field name="partner_id"/>
                    <field name="amount"/>
                    <field name="currency_id"/>
                    <field name="paid_at"/>
                    <field name="ref"/>
                </tree>
            </field>
        </record>

        <record id="view_payment_ledger_form" model="ir.ui.view">
            <field name="name">payment.ledger.form</field>
            <field name="model">payment.ledger</field>
            <field name="arch" type="xml">
                <form string="付款记录">
                    <sheet>
                        <group>
                            <group>
                                <field name="payment_request_id"/>
                                <field name="project_id" readonly="1"/>
                                <field name="partner_id" readonly="1"/>
                            </group>
                            <group>
                                <field name="amount"/>
                                <field name="currency_id" readonly="1"/>
                                <field name="paid_at"/>
                                <field name="ref"/>
                            </group>
                        </group>
                        <group>
                            <field name="note"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
    </data>
</odoo>
