<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <record id="view_project_budget_tree" model="ir.ui.view">
        <field name="name">project.budget.tree</field>
        <field name="model">project.budget</field>
        <field name="arch" type="xml">
            <tree>
                <field name="active" invisible="1"/>
                <field name="name"/>
                <field name="project_id"/>
                <field name="version"/>
                <field name="version_date"/>
                <field name="amount_cost_target"/>
                <field name="amount_revenue_target"/>
                <field name="is_active"/>
            </tree>
        </field>
    </record>

    <record id="view_project_budget_form" model="ir.ui.view">
        <field name="name">project.budget.form</field>
        <field name="model">project.budget</field>
        <field name="arch" type="xml">
            <form string="项目预算">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="project_id"/>
                        <field name="version"/>
                        <field name="active"/>
                    </group>
                    <group>
                        <field name="amount_cost_target" readonly="1"/>
                        <field name="amount_revenue_target" readonly="1"/>
                    </group>

                    <notebook>
                        <page string="预算行">
                            <field name="line_ids">
                                <tree editable="bottom">
                                    <field name="sequence"/>
                                    <field name="boq_line_id"/>
                                    <field name="wbs_id"/>
                                    <field name="name"/>
                                    <field name="budget_qty"/>
                                    <field name="budget_price"/>
                                    <field name="budget_amount"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_project_budget" model="ir.actions.act_window">
        <field name="name">项目预算</field>
        <field name="res_model">project.budget</field>
        <field name="view_mode">tree,form</field>
        <field name="groups_id" eval="[
            (4, ref('smart_construction_core.group_sc_cap_cost_user')),
            (4, ref('smart_construction_core.group_sc_cap_cost_manager'))
        ]"/>
    </record>

    <!-- parent 调整到模块顶级菜单：成控中心 -->
    <menuitem id="menu_project_budget"
              name="项目预算"
              parent="smart_construction_core.menu_sc_cost_center"
              action="action_project_budget"
              sequence="40"
              groups="smart_construction_core.group_sc_cap_cost_user,smart_construction_core.group_sc_cap_cost_manager"/>
</odoo>
