<odoo>
    <!-- 工程资料列表 -->
    <record id="view_sc_project_document_tree" model="ir.ui.view">
        <field name="name">sc.project.document.tree</field>
        <field name="model">sc.project.document</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="project_id"/>
                <field name="wbs_id"/>
                <field name="doc_type_id"/>
                <field name="doc_subtype_id"/>
                <field name="is_mandatory"/>
                <field name="responsible_id"/>
                <field name="date_doc"/>
                <field name="state"/>
                <field name="attachment_count"/>
            </tree>
        </field>
    </record>

    <!-- 工程资料表单 -->
    <record id="view_sc_project_document_form" model="ir.ui.view">
        <field name="name">sc.project.document.form</field>
        <field name="model">sc.project.document</field>
        <field name="arch" type="xml">
            <form string="工程资料">

                <header>
                    <!-- 提交审核：仅 draft 显示 -->
                    <button name="action_submit" type="object" string="提交审核"
                        class="oe_highlight"
                        modifiers='{"invisible":[["state","!=","draft"]]}'/>

                    <!-- 归档：draft 或 review 显示 -->
                    <button name="action_approve" type="object" string="归档"
                        modifiers='{"invisible":[["state","not in",["draft","review"]]]}'/>

                    <!-- 作废：cancel 隐藏 -->
                    <button name="action_cancel" type="object" string="作废"
                        modifiers='{"invisible":[["state","=","cancel"]]}'/>

                    <!-- 重置为草稿：draft 隐藏 -->
                    <button name="action_reset_to_draft" type="object" string="重置为草稿"
                        modifiers='{"invisible":[["state","=","draft"]]}'/>

                    <!-- 状态条 -->
                    <field name="state" widget="statusbar"
                        statusbar_visible="draft,review,done,cancel"/>
                </header>

                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="project_id" required="1"/>
                        <field name="wbs_id"/>
                        <field name="task_id"/>
                        <field name="contract_id"/>
                    </group>

                    <group>
                        <field name="doc_type_id" required="1"/>
                        <field name="doc_subtype_id"/>
                        <field name="is_mandatory"/>
                        <field name="date_doc"/>
                        <field name="version"/>
                    </group>

                    <group>
                        <field name="responsible_id"/>
                        <field name="company_id" readonly="1"/>
                    </group>

                    <notebook>
                        <page string="说明">
                            <field name="note"/>
                        </page>

                        <page string="附件">
                            <field name="attachment_ids" widget="many2many_binary"/>
                        </page>
                    </notebook>
                </sheet>

                <chatter/>
            </form>
        </field>
    </record>

    <!-- 工程资料动作 -->
    <record id="action_sc_project_document" model="ir.actions.act_window">
        <field name="name">工程资料</field>
        <field name="res_model">sc.project.document</field>
        <field name="view_mode">tree,form</field>
        <field name="groups_id" eval="[(4, ref('smart_construction_core.group_sc_cap_project_read'))]"/>
    </record>
</odoo>
