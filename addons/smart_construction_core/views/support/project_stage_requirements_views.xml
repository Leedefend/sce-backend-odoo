<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_sc_project_stage_requirement_wizard" model="ir.ui.view">
        <field name="name">sc.project.stage.requirement.wizard.form</field>
        <field name="model">sc.project.stage.requirement.wizard</field>
        <field name="arch" type="xml">
            <form string="阶段要求">
                <sheet>
                    <group>
                        <field name="project_id" readonly="1"/>
                        <field name="lifecycle_state" readonly="1"/>
                    </group>
                    <group>
                        <field name="line_ids" nolabel="1">
                            <tree string="阶段要求" editable="false">
                                <field name="name"/>
                                <field name="required"/>
                                <field name="action_xmlid" invisible="1"/>
                                <button name="action_go"
                                        type="object"
                                        string="去完成"
                                        class="btn-link"
                                        invisible="action_xmlid == False"/>
                            </tree>
                        </field>
                    </group>
                </sheet>
                <footer>
                    <button string="关闭" class="btn-primary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>
