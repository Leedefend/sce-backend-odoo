<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <!-- 仅在用户表单中展示 SC 业务能力组 + 用户类型组，隐藏其它原生组 -->
        <record id="view_users_form_sc_groups_only" model="ir.ui.view">
            <field name="name">res.users.form.sc.groups.only</field>
            <field name="model">res.users</field>
            <field name="inherit_id" ref="base.view_users_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='groups_id']" position="attributes">
                    <attribute name="domain">[
                        ('category_id', 'in', [
                            %(smart_construction_core.module_category_smart_construction)d,
                            %(base.module_category_user_type)d
                        ])
                    ]</attribute>
                </xpath>
            </field>
        </record>

    </data>
</odoo>
