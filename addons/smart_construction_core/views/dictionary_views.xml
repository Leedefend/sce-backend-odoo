<odoo>
    <!-- 业务字典列表 -->
    <record id="view_sc_dictionary_tree" model="ir.ui.view">
        <field name="name">sc.dictionary.tree</field>
        <field name="model">sc.dictionary</field>
        <field name="arch" type="xml">
            <tree>
                <field name="type"/>
                <field name="name"/>
                <field name="code"/>
                <field name="sequence"/>
                <field name="active"/>
            </tree>
        </field>
    </record>

    <!-- 业务字典表单 -->
    <record id="view_sc_dictionary_form" model="ir.ui.view">
        <field name="name">sc.dictionary.form</field>
        <field name="model">sc.dictionary</field>
        <field name="arch" type="xml">
            <form string="业务字典">
                <sheet>
                    <group>
                        <field name="type"/>
                        <field name="name"/>
                        <field name="code"/>
                        <field name="sequence"/>
                        <field name="active"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- 业务字典动作 -->
    <record id="action_sc_dictionary" model="ir.actions.act_window">
        <field name="name">业务字典</field>
        <field name="res_model">sc.dictionary</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{}</field>
    </record>
</odoo>
