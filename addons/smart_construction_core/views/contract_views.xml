<odoo>
    <!-- Tree view -->
    <record id="view_construction_contract_tree" model="ir.ui.view">
        <field name="name">construction.contract.tree</field>
        <field name="model">construction.contract</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="subject"/>
                <field name="project_id"/>
                <field name="type"/>
                <field name="category_id"/>
                <field name="partner_id"/>
                <field name="date_contract"/>
                <field name="amount_final"/>
                <field name="state"/>
            </tree>
        </field>
    </record>

    <!-- Form view -->
    <record id="view_construction_contract_form" model="ir.ui.view">
        <field name="name">construction.contract.form</field>
        <field name="model">construction.contract</field>
        <field name="arch" type="xml">
            <form string="项目合同">
                <header>
                    <button name="action_generate_lines_from_budget"
                            type="object"
                            string="从中标清单生成"
                            class="oe_highlight"
                            modifiers='{"invisible":[["state","!=","draft"]]}'/>
                    <button name="action_confirm"
                            type="object"
                            class="oe_highlight"
                            string="确认合同"
                            modifiers='{"invisible":[["state","!=","draft"]]}'/>
                    <button name="action_set_running"
                            type="object"
                            string="开始执行"
                            modifiers='{"invisible":[["state","not in",["draft","confirmed"]]]}'/>
                    <button name="action_close"
                            type="object"
                            string="完成"
                            modifiers='{"invisible":[["state","not in",["running","confirmed"]]]}'/>
                    <button name="action_cancel"
                            type="object"
                            string="作废"
                            modifiers='{"invisible":[["state","=","cancel"]]}'/>
                    <button name="action_reset_draft"
                            type="object"
                            string="重置为草稿"
                            modifiers='{"invisible":[["state","!=","cancel"]]}'/>
                    <field name="state"
                           widget="statusbar"
                           statusbar_visible="draft,confirmed,running,closed,cancel"/>
                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="subject"/>
                            <field name="type" required="1"/>
                            <field name="project_id" required="1"/>
                            <field name="partner_id" required="1"/>
                            <field name="category_id"/>
                            <field name="contract_type_id"/>
                        </group>
                        <group>
                            <field name="company_id" readonly="1"/>
                            <field name="currency_id"/>
                            <field name="date_contract"/>
                            <field name="date_start"/>
                            <field name="date_end"/>
                            <field name="budget_id"/>
                            <field name="analytic_id"/>
                        </group>
                    </group>

                    <group string="金额概览" colspan="2">
                        <field name="tax_rate"/>
                        <field name="amount_untaxed" readonly="1"/>
                        <field name="amount_tax" readonly="1"/>
                        <field name="amount_total" readonly="1"/>
                        <field name="line_amount_total" readonly="1"/>
                        <field name="amount_change" readonly="1"/>
                        <field name="amount_final" readonly="1"/>
                    </group>

                    <notebook>
                        <page string="合同行">
                            <field name="line_ids" context="{'default_contract_id': active_id}">
                                <tree editable="bottom">
                                    <field name="sequence" widget="handle"/>
                                    <field name="project_id" invisible="1"/>
                                    <field name="boq_line_id"/>
                                    <field name="boq_code"/>
                                    <field name="boq_name"/>
                                    <field name="wbs_id"/>
                                    <field name="uom_id"/>
                                    <field name="qty_contract"/>
                                    <field name="price_contract"/>
                                    <field name="amount_contract" readonly="1"/>
                                </tree>
                            </field>
                        </page>
                        <page string="备注">
                            <field name="note"/>
                        </page>
                    </notebook>
                </sheet>
                <chatter/>
            </form>
        </field>
    </record>

    <!-- Action -->
    <record id="action_construction_contract" model="ir.actions.act_window">
        <field name="name">项目合同</field>
        <field name="res_model">construction.contract</field>
        <field name="view_mode">tree,form</field>
        <field name="groups_id" eval="[(4, ref('smart_construction_core.group_sc_user')), (4, ref('smart_construction_core.group_sc_manager'))]"/>
    </record>
</odoo>
