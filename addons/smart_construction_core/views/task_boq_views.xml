<odoo>
    <record id="view_task_form_boq" model="ir.ui.view">
        <field name="name">project.task.form.boq</field>
        <field name="model">project.task</field>
        <field name="inherit_id" ref="project.view_task_form2"/>
        <field name="arch" type="xml">
            <xpath expr="//sheet/notebook" position="inside">
                <page string="BOQ工程">
                    <group>
                        <field name="boq_generated"/>
                        <field name="boq_group_key"/>
                        <field name="boq_section_type"/>
                    </group>
                    <group>
                        <field name="boq_quantity_total" readonly="1"/>
                        <field name="boq_uom_id" readonly="1"/>
                        <field name="boq_amount_total" readonly="1"/>
                    </group>
                    <field name="boq_line_ids">
                        <tree string="关联BOQ" readonly="1">
                            <field name="code"/>
                            <field name="name"/>
                            <field name="spec"/>
                            <field name="quantity"/>
                            <field name="uom_id"/>
                            <field name="price"/>
                            <field name="amount"/>
                        </tree>
                    </field>
                </page>
            </xpath>
        </field>
    </record>
</odoo>
