<odoo>
    <record id="view_project_change_order_tree" model="ir.ui.view">
        <field name="name">project.change.order.tree</field>
        <field name="model">project.change.order</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="project_id"/>
                <field name="contract_id"/>
                <field name="partner_id"/>
                <field name="change_type"/>
                <field name="change_category"/>
                <field name="amount_total"/>
                <field name="state"/>
                <field name="date_request"/>
                <field name="date_approved"/>
            </tree>
        </field>
    </record>

    <record id="view_project_change_order_form" model="ir.ui.view">
        <field name="name">project.change.order.form</field>
        <field name="model">project.change.order</field>
        <field name="arch" type="xml">
            <form string="变更/签证">
                <header>
                    <button name="action_submit"
                            type="object"
                            string="提交"
                            invisible="state != 'draft'"
                            class="btn-primary"/>
                    <button name="action_approve"
                            type="object"
                            string="审批通过"
                            invisible="state != 'submit'"
                            class="btn-primary"/>
                    <button name="action_reject"
                            type="object"
                            string="驳回"
                            invisible="state != 'submit'"/>
                    <button name="action_close"
                            type="object"
                            string="关闭"
                            invisible="state not in ['approved', 'rejected']"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,submit,approved,rejected,closed"/>
                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="project_id" />
                            <field name="contract_id" />
                            <field name="partner_id"/>
                            <field name="change_type"/>
                        </group>
                        <group>
                            <field name="change_category"/>
                            <field name="reason"/>
                            <field name="date_request"/>
                            <field name="amount_total"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="变更明细">
                            <field name="line_ids">
                                <tree>
                                    <field name="name"/>
                                    <field name="cost_item_id"/>
                                    <field name="quantity"/>
                                    <field name="uom_id"/>
                                    <field name="price_unit"/>
                                    <field name="currency_id"/>
                                    <field name="amount"/>
                                </tree>
                                <form>
                                    <group>
                                        <group>
                                            <field name="name"/>
                                            <field name="cost_item_id"/>
                                            <field name="quantity"/>
                                            <field name="uom_id"/>
                                        </group>
                                        <group>
                                            <field name="price_unit"/>
                                        </group>
                                        <group>
                                            <field name="currency_id"/>
                                            <field name="amount"/>
                                        </group>
                                    </group>
                                </form>
                            </field>
                        </page>
                    </notebook>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" options="{'post_refresh':True}" groups="base.group_user"/>
                        <field name="activity_ids"/>
                        <field name="message_ids"/>
                    </div>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_project_change_order" model="ir.actions.act_window">
        <field name="name">变更/签证</field>
        <field name="res_model">project.change.order</field>
        <field name="view_mode">tree,form</field>
    </record>
   
</odoo>

