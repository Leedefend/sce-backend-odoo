# Compose project name
ENV=prod
ENV_FILE=.env.prod
COMPOSE_PROJECT_NAME=sc-backend-odoo-prod

# Database
DB_USER=odoo
DB_PASSWORD=change-me
DB_NAME=sc_prod

# Odoo master password
ADMIN_PASSWD=change-me

# JWT secret (production must be long random)
JWT_SECRET=change-me

# Odoo: lock to a single DB
ODOO_DBFILTER=^sc_prod$

# Runtime data (bind mounts)
DB_DATA=./runtime/sc-backend-odoo-prod/postgres
REDIS_DATA=./runtime/sc-backend-odoo-prod/redis
ODOO_DATA=./runtime/sc-backend-odoo-prod/odoo

# Host ports
NGINX_PORT=18083
ODOO_PORT=8072
