# Compose project name
ENV=prod
ENV_FILE=.env.prod
COMPOSE_PROJECT_NAME=sc-backend-odoo-prod

# Database
DB_USER=odoo
DB_PASSWORD=change-me
DB_NAME=sc_prod

# Odoo master password
ADMIN_PASSWD=change-me

# JWT secret (production must be long random)
JWT_SECRET=change-me

# Odoo: lock to a single DB
ODOO_DBFILTER=^sc_prod$

# Runtime data (named volumes, explicit per env)
DB_DATA=sc_prod_db_data
REDIS_DATA=sc_prod_redis_data
ODOO_DATA=sc_prod_odoo_data

# Host ports
NGINX_PORT=18083
ODOO_PORT=8072
# Odoo image (pin for prod)
ODOO_IMAGE=odoo17-odoo:17.0-prod-20260120

